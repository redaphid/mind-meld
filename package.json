{
  "name": "@redaphid/mindmeld",
  "version": "0.2.5",
  "description": "Unified conversation index for Claude Code and Cursor with PostgreSQL + Chroma",
  "type": "module",
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redaphid/mind-meld.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "main": "dist/index.js",
  "bin": {
    "mindmeld": "dist/index.js"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "tsc",
    "build:binary": "bun build --compile src/index.ts --outfile out/mindmeld",
    "dev": "tsx watch src/mcp/http-server.ts",
    "start": "node dist/index.js",
    "sync": "tsx src/index.ts sync",
    "sync:claude": "tsx src/index.ts sync --source claude_code",
    "sync:cursor": "tsx src/index.ts sync --source cursor",
    "sync:embeddings": "tsx src/index.ts embeddings",
    "compute:centroids": "tsx scripts/compute-centroids.ts",
    "mark:warmups": "tsx scripts/mark-warmups.ts",
    "search": "tsx scripts/search.ts",
    "stats": "tsx scripts/stats.ts",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:reset": "docker compose down -v && docker compose up -d",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "mcp": "tsx src/mcp/server.ts",
    "mcp:dev": "tsx watch src/mcp/server.ts",
    "test": "vitest run",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@chroma-core/ollama": "^0.1.8",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@hypnodroid/cursor-conversations": "^1.0.2",
    "@types/express": "^5.0.6",
    "chromadb": "^3.1.6",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "express": "^5.2.1",
    "glob": "^11.0.0",
    "ollama": "^0.5.11",
    "pg": "^8.13.1",
    "readline": "^1.3.0",
    "sql.js": "^1.13.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/pg": "^8.11.10",
    "@types/sql.js": "^1.4.9",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.6"
  }
}
