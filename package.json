{
  "name": "mindmeld",
  "version": "0.1.0",
  "description": "Unified conversation index for Claude Code and Cursor with PostgreSQL + Chroma",
  "type": "module",
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "sync": "tsx src/index.ts sync",
    "sync:claude": "tsx src/index.ts sync --source claude_code",
    "sync:cursor": "tsx src/index.ts sync --source cursor",
    "sync:embeddings": "tsx src/index.ts embeddings",
    "search": "tsx scripts/search.ts",
    "stats": "tsx scripts/stats.ts",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:reset": "docker compose down -v && docker compose up -d",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "cron:start": "tsx src/cron.ts",
    "test": "vitest run",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@chroma-core/ollama": "^0.1.8",
    "@redaphid/cursor-conversations": "link:../../mcp-cursor-conversations",
    "better-sqlite3": "^11.6.0",
    "chromadb": "^3.1.6",
    "commander": "^12.1.0",
    "cron": "^3.1.7",
    "dotenv": "^16.4.5",
    "glob": "^11.0.0",
    "ollama": "^0.5.11",
    "pg": "^8.13.1",
    "readline": "^1.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.0",
    "@types/pg": "^8.11.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.6"
  }
}
