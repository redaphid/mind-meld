# Data storage directory (defaults to ./data)
DATA_DIR=./data

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=mindmeld
POSTGRES_PASSWORD=mindmeld_dev
POSTGRES_DB=conversations

# Chroma
CHROMA_HOST=localhost
CHROMA_PORT=8001

# Ollama (REQUIRED - embeddings will fail without it)
OLLAMA_URL=http://localhost:11434

# Embedding configuration
EMBEDDING_MODEL=bge-m3
EMBEDDING_DIMENSIONS=1024
EMBEDDING_BATCH_SIZE=100

# Source paths
CLAUDE_CODE_PATH=~/.claude

# Cursor globalStorage path (platform-specific)
# macOS: ~/Library/Application Support/Cursor/User/globalStorage
# Linux: ~/.config/Cursor/User/globalStorage
# Windows: %APPDATA%/Cursor/User/globalStorage
CURSOR_GLOBALSTATE_PATH=~/Library/Application Support/Cursor/User/globalStorage

# Sync configuration
SYNC_INTERVAL_SECONDS=3600

# Centroid computation interval (default: 7 hours = 25200 seconds)
CENTROID_INTERVAL_SECONDS=25200

# Logging
LOG_LEVEL=info
