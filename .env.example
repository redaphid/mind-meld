# PostgreSQL (port 5433 - non-standard)
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=mindmeld
POSTGRES_PASSWORD=mindmeld_dev
POSTGRES_DB=conversations

# Chroma (port 8001 - non-standard)
CHROMA_HOST=localhost
CHROMA_PORT=8001

# Ollama (use existing or dedicated)
OLLAMA_URL=http://localhost:11434

# Embedding configuration
EMBEDDING_MODEL=bge-m3
EMBEDDING_DIMENSIONS=1024
EMBEDDING_BATCH_SIZE=100

# Source paths (~ will be expanded)
CLAUDE_CODE_PATH=~/.claude
CURSOR_PATH=~/.cursor/chats

# Sync configuration
SYNC_INTERVAL_MINUTES=60
SYNC_INCREMENTAL=true

# Logging
LOG_LEVEL=info
